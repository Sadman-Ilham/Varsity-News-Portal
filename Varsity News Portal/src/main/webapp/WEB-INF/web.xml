<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>varsityNewsPortal</display-name>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>com.test</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.sadman.varsityNewsPortal.controller.homeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>com.sadman.varsityNewsPortal.controller.userLoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/loginController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logoutController</servlet-name>
        <servlet-class>com.sadman.varsityNewsPortal.controller.userLogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signupController</servlet-name>
        <servlet-class>com.sadman.varsityNewsPortal.controller.signupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signupController</servlet-name>
        <url-pattern>/signupController</url-pattern>
    </servlet-mapping>
   
    <servlet>
        <servlet-name>newsController</servlet-name>
        <servlet-class>com.sadman.varsityNewsPortal.controller.newsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>newsController</servlet-name>
        <url-pattern>/news</url-pattern>
    </servlet-mapping>




    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/loginPageOld.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signup</servlet-name>
        <jsp-file>/signupPageOld.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>    

    <servlet>
        <servlet-name>article</servlet-name>
        <jsp-file>/article.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>article</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>

</web-app>
